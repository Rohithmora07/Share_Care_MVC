extends ../layout

block content
  .container.py-5
    h1.text-center.mb-5 Volunteer

    form.card.p-4.shadow.mx-auto(style="max-width:500px;" action="/volunteers/add" method="POST")
      .mb-3
        label.form-label Name
        input.form-control(type="text" name="name" required)
      .mb-3
        label.form-label Role
        input.form-control(type="text" name="role" required)
      button.btn.btn-primary.w-100 Join Now

    if volunteers && volunteers.length
      h3.mt-5 Our Volunteers
      .row
        each v in volunteers
          .col-md-4.mb-3
            .card
              .card-body
                h5= v.name
                p: strong #{v.role}